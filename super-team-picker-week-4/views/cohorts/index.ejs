<%- include("../partials/header.ejs") %>

<!-- <h1>Cohorts</h1> -->

<%# cohorts[0].name %>

<div class="container-fluid py-3">
    <div class="row">
        <% cohorts.forEach(function(cohort){ %>
        <div class="col-sm-10">
            <div class="card p-3">
                <div class="row">
                    <div class="col-2">
                        <img src="<%= cohort.logoUrl %>" class="img-fluid rounded-circle">  
                    </div>
                    <div class="col-4 d-flex align-items-center">
                        <h3 class="card-title"><%= cohort.name %></h3>
                    </div>    
                </div>
                
                <div class="card-block pt-3">
                    <%= cohort.members %>
                </div>
                <form class="pt-3" action="/cohorts/<%=cohort.id%>" method="GET">
                    <button type="submit" class="btn btn-primary">Show Cohort</button>
                </form>         
            </div>

        </div>


    

    


        
        
    
    
        <% }); %>

    </div>
</div>
  


<%- include("../partials/footer.ejs") %>