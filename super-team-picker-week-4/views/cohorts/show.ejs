<%- include("../partials/header") %>
<div class="container-fluid">
    <div class="card p-2">
        <h5><%= cohort.name %></h5>
        <div><%= cohort.members %></div>
        <!-- <div><img src=<%= cohort.logoUrl %>></div> -->
        <form action="/cohorts/<%= cohort.id %>/edit" method="GET" class="py-1">
            <!-- We need this hidden input for methodOverride middleware to change the POST request to a DELETE request -->
            <!-- <input type="hidden" name="_method" value="EDIT"> -->
            <button type="submit" class="btn btn-primary">Edit Cohort</button>
        </form>
        
        <form action="/cohorts/<%= cohort.id %>" method="POST" class="py-1">
            <!-- We need this hidden input for methodOverride middleware to change the POST request to a DELETE request -->
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-primary">Delete Cohort</button>
        </form>
        </div>
    </div>
    
<div class="container-fluid">
    <div class="card p-2">
        <form class="" action="/cohorts/<%=cohort.id%>" method="GET">
            <h5>Method</h5>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="methodSelect" value="perTeam" checked>
                <label class="form-check-label" for="methodSelect">Team Count</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="methodSelect" value="teamCount">
                <label class="form-check-label" for="methodSelect">Number By Team</label>
            </div>
            <div class="form-group py-2">
                <h5>Quantity</h5>
                <input class="form-control" type="text" name="quantity" placeholder="ie. 2">
            </div>
            <button type="submit" value="send" class="btn btn-outline-primary col-12">Assign Teams</button>
        </form>
        <%=selectedMethod%>
        <%=quantity%>
    </div>

    <!-- Random Team Display -->

    <%# req.query %>

</div>  

<%- include("../partials/footer") %>